[Unit]
After=network.target
 
[Service]
Restart=always
RestartSec=30
Environment="TCPDUMP_FORMAT=%%Y-%%m-%%d__%%H-%%M;DEFAULT_INTERFACE=$(ip route show default | awk '{print $5}')"
ExecStartPre=/bin/mkdir -p /var/log/tcpdumpd/
# zusatzoption "-s 65535" für max packet länge, default ist 262144
ExecStart=/usr/bin/tcpdump -i ${DEFAULT_INTERFACE} -G 43200 -s 65535 -w '/var/log/tcpdumpd/tcpdump_${TCPDUMP_FORMAT}.pcap'
ExecStop=/bin/kill -s TERM $MAINPID
 
[Install]
WantedBy=multi-user.target
